
<div class="card" style="border:2px solid #231010">
  <h3
    class="card-header"
    style="background-color: #231010;color: #d9ead3"
  >Login</h3>
  <div class="card-body" style="background-color: #d9ead3">
    <form class="form login-form p-3" method="post" action="/api/users/login"/>
      <div class="form-group" style="height:40%">
        <label for="username">Username</label><br/>
        <input class="form-input" type="text" id="username" name="username" style="width:100%; height:10%"/>
      </div>
      <div class="form-group">
        <label for="password">Password</label><br />

        <input class="form-input" type="password" id="password" name="password" style="width:100%; height:10%"/>
      </div>
      <div class="form-group">
        {{error}}
        <br/>
        <button class="btn" style="background-color: #666666; color:white;width:100%;height:10%;font-size:30px" type="submit">Login!</button>
      </div>
    </form>
        <a class="m-3" href="/signup">Sign up instead</a>
</a>
  </div>
</div>

<script src="./js/login.js" type="text/javascript"></script>

