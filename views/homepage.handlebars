<!-- Loop over each object in the projects array -->
{{#each posts as |post|}}
  <div class="row mb-4 post">

    <!-- Call helper function with triple brackets to render the emoji span as HTML -->

    <div class="card" style="border:2px solid #231010">
      <h3
        class="card-header"
        style="background-color: #231010;color: #d9ead3"
      ><a href="/post/{{post.id}}">{{post.title}}</a>
        <p>Posted by
          {{post.user.name}}
          on
          {{format_date post.created_on}}</p></h3>
      <div class="card-body">
        <div class="col-md-6">
          <p>
            {{post.content}}
          </p>
        </div>

      </div>
    </div>

  </div>
{{/each}}